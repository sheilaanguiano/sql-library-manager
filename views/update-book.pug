extends layout

block content
  h1 Update Book

  include error

  form(method='post')
    p
      label(for='title') Title 
      input( name='title' type='text' value=book.title)
    p
      label(for='author') Author 
      input( name='author' type='text' value=book.author)
    p
      label(for='genre') Genre 
      input( name='genre' type='text' value=book.genre)
    p
      label(for='year') Year 
      input( name='year' type='text' value=book.year)
    p
      input( type='submit'   value='Update Book')
    p
      a(class='button' href='/books') Cancel
    p 
      input( type='submit' value='Delete Book')

